<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <com.makemusiccount.android.ui.MyRoundImageView
            android:id="@+id/ivImageOver"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/white_overlay"
            android:visibility="gone" />

        <com.makemusiccount.android.ui.MyRoundImageView
            android:id="@+id/ivStatus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/ivImage"
            android:layout_alignEnd="@+id/ivImage"
            android:layout_alignRight="@+id/ivImage"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>

    <com.makemusiccount.android.ui.MyHeadingTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textColor="#e61e22"
        android:textSize="16sp" />

</LinearLayout>